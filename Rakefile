  p.summary = 'A Ruby client for the Super Rewards web service'
  p.description = 'A Ruby client for the Super Rewards web service'
  p.url = 'http://shanesbrain.net'
  p.changes = p.paragraphs_of('History.txt', 0..1).join("\n\n")
  p.remote_rdoc_dir = ''
end

